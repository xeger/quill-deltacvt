{
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.options": {
    "rules": {
      "no-console": "off",
      "no-debugger": "off"
    }
  },
  "eslint.packageManager": "npm",
  "eslint.validate": [
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "typescript",
      "autoFix": true
    }
  ],
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
}
